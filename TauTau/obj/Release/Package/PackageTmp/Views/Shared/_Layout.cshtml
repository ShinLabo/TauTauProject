<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - タウタウアプリケーション</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="MusicHeader">
        <div class="MusicContainer">
            <div class="Navbar_Header">
                @Html.ActionLink("TauTau", "Index", "MTauTau", new { area = "" }, new { @class = "HeadActionLink" })
            </div>
            <div class="Navbar_Header_Mini">
                @Html.ActionLink("投稿", "Create", "MTauTau", new { @class = "HeadActionLink_Mini" })
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - タウタウ アプリケーション</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/vue")
    @RenderSection("scripts", required: false)
</body>
</html>